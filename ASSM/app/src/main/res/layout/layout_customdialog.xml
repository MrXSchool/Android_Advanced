<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin môn học"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txtMaMonHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã Môn học:"
        />

    <TextView
        android:id="@+id/txtTenMonHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Môn học:"
        />

    <TextView
        android:id="@+id/txtTenGiangVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Giảng viên:"
        />

    <TextView
        android:id="@+id/txtLicHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch học:"
        />

    <TextView
        android:id="@+id/txtPhongHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phòng học:"
        />



</LinearLayout>